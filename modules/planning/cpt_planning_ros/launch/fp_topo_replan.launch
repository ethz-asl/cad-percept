<launch>
  <!-- global parameters -->
  <arg name="map_size_x" default="40.0"/>
  <arg name="map_size_y" default="40.0"/>
  <arg name="map_size_z" default=" 5.0"/>

  <arg name="odom_topic" default="/mavros/local_position/odom" />
  <arg name="camera_pose_topic" default="/camera/pose"/>
  <arg name="depth_topic" default="/camera/depth/image_raw"/>
  <arg name="cloud_topic" default="/camera/depth/points"/>

  <arg name="max_vel" default="1.0" />
  <!-- <arg name="max_acc" default="2.5" /> -->
  <arg name="max_acc" default="1.0" />

  <arg name="waypoint_type" default="manual-lonely-waypoint"/>    
  <arg name="team_role" default="drone_one" />
  <!-- <arg name="csv_path" default="/root/yoctohome/catkin_ws/src/Fast-Planner/uav_simulator/Utils/waypoint_generator/src/ExamplePath_multidrone.csv" /> -->
  <arg name="csv_path" default="/root/yoctohome/catkin_ws/src/Fast-Planner/uav_simulator/Utils/waypoint_generator/src/ExamplePath.csv" />
  <arg name="distribution_topic" default="/distribute_mission" />
  <arg name="sub_team_mission_topic" default="/sub_team_mission" />
  <arg name="fsm_wait_target_topic" default="/planning/fsm_wait_target" />
  <arg name="sub_follower_0_pose_topic" default="/follower_0_pose" />
  <arg name="team_sychron_enable" default="false" />





  <!-- main algorithm params -->
  <include file="$(find omav_gazebo_wada)/launch/fp_topo_algorithm.xml">
    <!-- size of map -->
    <arg name="map_size_x_" value="$(arg map_size_x)"/>
    <arg name="map_size_y_" value="$(arg map_size_y)"/>
    <arg name="map_size_z_" value="$(arg map_size_z)"/>
    <arg name="odometry_topic" value="$(arg odom_topic)"/>

    <!-- camera pose: transform of camera frame in the world frame -->
    <!-- depth topic: depth image, 640x480 by default -->
    <!-- don't set cloud_topic if you already set these ones! -->
    <arg name="camera_pose_topic" value="$(arg camera_pose_topic)"/>
    <arg name="depth_topic" value="$(arg depth_topic)"/>

    <!-- topic of point cloud measurement, such as from LIDAR  -->
    <!-- don't set camera pose and depth, if you already set this one! -->
    <!-- <arg name="cloud_topic" value="/camera/depth/"/> -->
    <arg name="cloud_topic" value="$(arg cloud_topic)"/>

    <!-- intrinsic params of the depth camera gazebo model 640x480 -->
    <!-- <arg name="cx" value="320.5"/>
    <arg name="cy" value="240.5"/>
    <arg name="fx" value="343.49636753580074"/>
    <arg name="fy" value="343.49636753580074"/> -->

    <!-- intrinsic params of the depth camera gazebo model 480x270 -->
    <arg name="cx" value="240.63444519043"/>
    <arg name="cy" value="132.424880981445"/>
    <arg name="fx" value="239.324310302734"/>
    <arg name="fy" value="239.324310302734"/>



    <!-- maximum velocity and acceleration the drone will reach -->
    <arg name="max_vel" value="$(arg max_vel)" />
    <arg name="max_acc" value="$(arg max_acc)" />

    <!-- 1: use 2D Nav Goal to select goal  -->
    <!-- 2: use global waypoints below  -->
    <!-- 3: use reference path -->
    <arg name="flight_type" value="1" />
    <!-- <arg name="flight_type" value="3" /> -->

    <!-- global waypoints -->
    <arg name="point_num" value="3" />

    <arg name="point0_x" value="0.0" />
    <arg name="point0_y" value="0.0" />
    <arg name="point0_z" value="1.0" />

    <!-- set more waypoints if you need -->
    <arg name="point1_x" value="1.0" />
    <arg name="point1_y" value="1.0" />
    <arg name="point1_z" value="1.0" />

    <arg name="point2_x" value="1.0" />
    <arg name="point2_y" value="2.0" />
    <arg name="point2_z" value="1.0" />
  </include>

  <!-- trajectory server -->
  <node pkg="plan_manage" name="traj_server" type="traj_server" output="screen">
    <!--remap from="/position_cmd" to="planning/pos_cmd"/-->
    <remap from="/position_cmd" to="planning/ref_traj"/>

    <remap from="/odom_world" to="$(arg odom_topic)"/>
    <param name="traj_server/time_forward" value="1.5" type="double"/>
  </node>

  <node pkg="waypoint_generator" name="waypoint_generator" type="waypoint_generator" output="screen">
    <remap from="~odom" to="$(arg odom_topic)"/>        
    <remap from="~goal" to="/move_base_simple/goal"/>
    <remap from="~traj_start_trigger" to="/traj_start_trigger" />
    <param name="waypoint_type" value="manual-lonely-waypoint"/>    
  </node>

</launch>