<?xml version="1.0" encoding="utf-8"?>

<launch>
  <arg name="ee_poses_visitor_config_file"
       default="cfg/ee_poses_visitor_params_mabi.yaml"
       doc="YAML file holding the parameters for the end-effector poses visitor."/>
  <arg name="common_params_file"
       default="cfg/common_params_mabi.yaml"
       doc="YAML file holding the common parameters."/>
  <!-- Load common parameters -->
  <rosparam command="load" file="$(find cpt_pointlaser_common)/$(arg common_params_file)" />
  <!-- Node that communicates with the controller to move the end effector -->
  <node name="pointlaser_ctrl"
        pkg="cpt_pointlaser_ctrl_ros"
        type="mabi_ee_poses_visitor_node"
        output="screen">
    <rosparam command="load" file="$(find cpt_pointlaser_ctrl_ros)/$(arg ee_poses_visitor_config_file)" />
  </node>
</launch>
